ff:WohnflaecheAndWohnsitzConstraint
    a sh:NodeShape ;
    sh:targetClass ff:Citizen ;
    sh:property [
          sh:path ff:hasF00003175Value ;
          sh:datatype xsd:integer ;
          sh:minInclusive 50 ;
          sh:minCount 1 ;
          sh:message "Wohnflaeche must be at least 50" ;
      ] ;
    sh:property [
          sh:path ff:hasF03003228Value ;
          sh:datatype xsd:string ;
          sh:hasValue "Berlin" ;
          sh:minCount 1 ;
          sh:message "Wohnsitz must be Berlin" ;
      ] .
